{
  "name": "mtgnewsbot",
  "version": "1.0.1",
  "description": "MTG News Robot",
  "author": "Mark Diehr <mdiehr@gmail.com> (https://www.goodgamery.com)",
  "main": "src/news-engine.js",
  "scripts": {
    "start": "npm run print",
    "print": "node src/index.js ",
    "lint": "gulp lint",
    "test": "gulp lint && npm run print 15",
    "watch": "gulp",
    "build-grammar": "node build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdiehr/mtgnewsbot.git"
  },
  "keywords": [
    "Robot",
    "Twitter"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdiehr/mtgnewsbot/issues"
  },
  "homepage": "https://github.com/mdiehr/mtgnewsbot#readme",
  "dependencies": {
    "lodash.merge": "4.6.0",
    "tracery-grammar": "2.7.3",
    "twit": "2.2.9",
    "svg2png": "4.1.1"
  },
  "devDependencies": {
    "eslint": "^4.2.0",
    "gulp": "^3.9.1",
    "gulp-debug": "^3.1.0",
    "gulp-eslint": "^4.0.0",
    "gulp-jsonlint": "^1.2.0",
    "gulp-util": "3.0.8",
    "run-sequence": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-mixed-spaces-and-tabs": 1,
      "no-unused-expressions": 1,
      "no-unused-vars": [
        1,
        {
          "vars": "all",
          "args": "after-used"
        }
      ],
      "strict": 2,
      "semi": [
        2,
        "always"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
